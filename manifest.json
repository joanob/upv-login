{
    "manifest_version": 2,
    "name": "UPVin",
    "description": "Inicia sesi√≥n en la UPV con un clic.",
    "version": "1.0",
    "icons": { 
        "64": "icons/icon.png" 
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon.png",
        "default_title": "UPVin"
    },
    "background": {
        "scripts": ["auto.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://intranet.upv.es/*"],
            "js": ["script.js"]
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "storage"
    ]
  }
